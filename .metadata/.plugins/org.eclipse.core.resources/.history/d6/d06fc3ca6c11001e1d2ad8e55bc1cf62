
public class ThreadMain {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

				Thread thread = new BeepTask();
				thread.start();
				
				for(int i =0; i<5;i++) {
					System.out.println("beep");
					try {Thread.sleep(500);}catch(InterruptedException e){}
				}
			}
	}

}
