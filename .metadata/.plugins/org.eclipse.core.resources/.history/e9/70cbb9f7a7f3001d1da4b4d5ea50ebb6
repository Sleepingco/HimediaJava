
public class MobilityMain {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		//캡슐화(encapsulization)
		//다형성(poly mophism)
		//상속(inheritance)
		//추상화(Abstraction)
		Car seltos = new Car(); //실체(instance)생성 (메모리에 출현)
		
//		seltos.color ="white";
		seltos.setColor("white");//메소드는 괄호를 써야함
		seltos.setWheelCount(4);
		seltos.setMaxSpeed(180);
		seltos.setSpeed(0);
		seltos.setMaker("KIA");
		seltos.setModelName("Nobless");
		seltos.setDisplacement(1596);
		
		System.out.println("color "+seltos.getColor());//메소드는 괄호를 써야함
		System.out.println("wheel "+seltos.getWheelCount());
		System.out.println("maxSpeed "+seltos.getMaxSpeed());
		System.out.println("speed "+seltos.getSpeed());
		System.out.println("maker "+seltos.getMaker());
		System.out.println("modelName "+seltos.getModelName());
		System.out.println("displacement "+seltos.getDisplacement());
		
		seltos.drive(80);
		seltos.stop();
		
		Car avante = new Car(); //instance 변수
		avante.setColor("silver");
		avante.setWheelCount(4);
		avante.setMaxSpeed(240);
		avante.setSpeed(0);
		avante.setMaker("Hyundai");
		avante.setModelName("Avante N");
		avante.setDisplacement(1496);
	}
	
}